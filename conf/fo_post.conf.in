ModulePath "@CMAKE_INSTALL_LIBDIR_FULL@/cforum/"

Load "flt_tplmode"
Load "flt_http"
Load "flt_directives"
Load "flt_visited"
Load "flt_include"
Load "flt_httpauth"
Load "flt_posting"
Load "flt_list"
Load "flt_nested"
Load "flt_remotesignature"
Load "flt_postingassistant"
Load "flt_spellcheck"
Load "flt_preview"
Load "flt_syntax"
Load "flt_checkregisteredname"
Load "flt_mailonpost"

PatternsDirectory "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/patterns/"

Forum FORUM1 {
 ReadMode "thread"

 PostingUrl "^http://wwwtech.de/cforum/forum/\\?"
 PostingUrl "^http://wwwtech.de/cforum/forum/my/\\?"
 PostingUrl "^/cforum/forum/\\?"
 PostingUrl "^/cforum/forum/my/\\?"
 PostingUrl "^\./\\?"

 FieldConfig "Name"     "60"     "2"
 FieldConfig "subject"  "64"     "4"
 FieldConfig "body"     "12288"  "10"
 FieldConfig "EMail"    "60"     "2"
 FieldConfig "unid"     "50"     "5"
 FieldConfig "qchar"    "10"     "1"
 FieldConfig "cat"      "18"     "3"

 FieldNeeded "Name" "yes" "yes"
 FieldNeeded "EMail" "yes" "yes"
 FieldNeeded "subject" "yes" "no"
 FieldNeeded "body" "yes" "yes"
 FieldNeeded "unid" "yes" "yes"
 FieldNeeded "qchar" "yes" "yes"
 FieldNeeded "cat" "yes" "no"

 FieldValidate "EMail" "email"
 FieldValidate "HomepageUrl" "http"
 FieldValidate "ImageUrl" "http-strict"

 QuotingChars "»» "
 PreviewDateFormat "%d. %B %Y, %H:%M"
 DateFormat "%d. %B %Y, %H:%M"

 PostingAssistantMustValidate "yes"

 BadWords "fick,wichs,arschloch,nutte,hure,muschi"
 BadwordsAllowed "3"

 FormateDeficitesAllowed "5"

 QuotingPercent "50"
 QuoteMustValidate "yes"

 SpellCheckerEnabled "yes"
 SpellCheckerLanguage "de_DE"

 SMTPHost "localhost"
 SMTPFrom "cforum@wwwtech.de"
 SMTPReverse "devnull@wwwtech.de"
 MailDatabase "@CMAKE_INSTALL_LOCALSTATEDIR_FULL@/cforum/mail_forum1.db"

 Image "selbermachen" "/images/01.gif" "Für dein Problem gibt es nur eine Lösung: SELFmade von Selbermachen."
 Image "archiv" "/images/02.gif" "Die Antwort auf deine Frage findest du im Archiv."
 Image "formulierung" "/images/03.gif" "Was willst du jetzt eigentlich wissen?"
 Image "selfhtml" "/images/04.gif" "Schau mal in SELFHTML nach, um eine Antwort auf deine Frage zu finden!"
 Image "ende" "/images/05.gif" "Jetzt reicht's aber!"
 Image "reihenfolge" "/images/06.gif" "Erstmal selber probieren, dann bei Problemen: SELFHTML, danach: dieses Forum."
 Image "fehlamplatz" "/images/07.gif" "Stopp! So etwas hat hier nichts zu suchen."
 Image "links" "/images/08.gif" "Schau mal unter folgenden Links nach:"
 Image "panik" "/images/10.gif" "??!%${"
 Image "elfgebote" "/images/11.gif" "Die elf Gebote des SELF-Forums"
 Image "baustelle" "/images/12.gif" "ZU DIESEM FORUM"
 Image "trolls" "/images/13.gif" "Don't feed the trolls"
 Image "dumm" "/images/14.gif" "Ein bischen dumm?"
 Image "nein" "/images/15.gif" "Nein!"
 Image "noe" "/images/16.gif" "Noe!"
 Image "board" "/images/17.gif" "Board?"

 ThreadTemplate "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_thread.so"
 FatalTemplate "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_fatal.so"
 OkTemplate "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_post_ok.so"
}



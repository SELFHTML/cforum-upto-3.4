#
# The configuration for the viewer program
#
# $LastChangedDate$
# $LastChangedRevision$
# $LastChangedBy$
#

ModulePath "@libdir@/cforum/"

Load "flt_tplmode"
Load "flt_http"
Load "flt_frameset"
Load "flt_openclose"
Load "flt_posting"
Load "flt_basic"
Load "flt_listhighlight"
Load "flt_category"
Load "flt_deleted"
Load "flt_visited"
Load "flt_include"
Load "flt_livefilter"
Load "flt_httpauth"
Load "flt_admin"
Load "flt_link"
Load "flt_threadreturnanchor"
Load "flt_handle404"
Load "flt_motd"
Load "flt_tipoftheday"
Load "flt_sorting"
Load "flt_directives"
Load "flt_syntax"
Load "flt_mailonpost"
Load "flt_preview"
Load "flt_threadlist"

PatternsDirectory "@sysconfdir@/cforum/patterns/"

Forum FORUM1 {
 ThreadsOpenByDefault    "yes"
 DoQuote                 "yes"
 QuotingChars            "»» "
 ShowThread              "partitial" # full, partitial, none
# VIPList                 "Cheatah,Stefan Einspender,Stefan Muenz"
# VIPColors               "#FF00FF" "#0000FF"
 ShowForumAsFrameset     "no"
 ReadMode                "thread" # thread, threadlist, list
# BaseTarget              "view"

 ParamType               "Q" # Q (query string) or P (path info)

 SendLastModified        "yes"
 SendExpires             "1M"
 HandleLastModifiedSince "yes"

 GeneratePreview "yes"

 MotdFile "/etc/motd"
 EnableMotd "yes"

 TemplatesFrameset      "@sysconfdir@/cforum/templates/forum1/%s_%s_frameset.so" "@sysconfdir@/cforum/templates/forum1/%s_%s_blank.so"

 TemplateForumBegin     "@sysconfdir@/cforum/templates/forum1/%s_%s_forum_begin.so"
 TemplateForumEnd       "@sysconfdir@/cforum/templates/forum1/%s_%s_forum_end.so"
 TemplateForumThread    "@sysconfdir@/cforum/templates/forum1/%s_%s_forum_thread.so"
 TemplatePosting        "@sysconfdir@/cforum/templates/forum1/%s_%s_forum_posting.so"

 # Date format
 #
 # see 'man strftime` for more informations to the
 # format strings
 #

 DateFormatLoadTime     "%A, %d. %B %Y, %H:%M:%S"
 DateFormatThreadList   "%d. %m. %Y, %H:%M"
 DateFormatThreadView   "%d. %B %Y, %H:%M"

 OpenThread "<li>"
 OpenPosting "<li>"
 OpenSubtree "<ul>"
 CloseSubtree "</ul>"
 ClosePosting "</li>"
 CloseThread "</li>"

 MailDatabase "@localstatedir@/cforum/mail_forum1.db"
}

# eof


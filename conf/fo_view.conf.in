ModulePath "@CMAKE_INSTALL_LIBDIR_FULL@/cforum/"

Load "flt_tplmode"
Load "flt_http"
Load "flt_frameset"
Load "flt_openclose"
Load "flt_posting"
Load "flt_list"
Load "flt_nested"
Load "flt_basic"
Load "flt_listhighlight"
Load "flt_category"
Load "flt_deleted"
Load "flt_visited"
Load "flt_include"
Load "flt_livefilter"
Load "flt_httpauth"
Load "flt_admin"
Load "flt_link"
Load "flt_threadreturnanchor"
Load "flt_handle404"
Load "flt_motd"
Load "flt_tipoftheday"
Load "flt_sorting"
Load "flt_directives"
Load "flt_syntax"
Load "flt_mailonpost"
Load "flt_preview"
Load "flt_cgiconfig"

PatternsDirectory "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/patterns/"

Forum FORUM1 {
 ThreadsOpenByDefault    "yes"
 DoQuote                 "yes"
 QuotingChars            "»» "
 ReadMode                "thread" # thread, list, nested
 ThreadMode              "list" # list, nested
 ShowThread              "partitial" # full, partitial, none
# VIPList                 "Cheatah,Stefan Einspender,Stefan Muenz"
# VIPColors               "#FF00FF" "#0000FF"
 ShowForumAsFrameset     "no"
# BaseTarget              "view"

 ParamType               "Q" # Q (query string) or P (path info)

 SendLastModified        "yes"
 SendExpires             "1M"
 HandleLastModifiedSince "yes"

 GeneratePreview "yes"

 MotdFile "/etc/motd"
 EnableMotd "yes"

 TemplatesFrameset      "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_frameset.so" "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_blank.so"

 TemplateForumBegin     "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_forum_begin.so"
 TemplateForumEnd       "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_forum_end.so"
 TemplateForumThread    "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_forum_thread.so"
 TemplateForumList      "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_forum_list.so"
 TemplateForumNested    "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_forum_nested.so"

 TemplatePosting        "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_forum_posting.so"

 # Date format
 #
 # see 'man strftime` for more informations to the
 # format strings
 #

 DateFormatLoadTime     "%A, %d. %B %Y, %H:%M:%S"
 DateFormatThreadList   "%d. %m. %Y, %H:%M"
 DateFormatThreadView   "%d. %B %Y, %H:%M"

 MailDatabase "@CMAKE_INSTALL_LOCALSTATEDIR_FULL@/cforum/mail_forum1.db"
}

# eof


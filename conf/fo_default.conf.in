SocketName "@with_socket_path@"

Forum FORUM1 {
 TemplateMode "html4"
 XHTMLMode "no"

 ErrorTemplate "@sysconfdir@/cforum/templates/forum1/%s_%s_errortpl.so"

 ThreadIndexFile "@localstatedir@/cforum/forum1_tididx.dat"

 BaseURL "/"
 PostingURL "?t=%t&m=%m"
 PostingURL_List "?t=%t#m%m"
 PostingURL_Nested "?t=%t#m%m"
 UBaseURL "/my/"
 UPostingURL "/my/?t=%t&m=%m"
 UPostingURL_List "?t=%t#m%m"
 UPostingURL_Nested "?t=%t#m%m"

 VoteURL "/cgi-bin/user/fo_vote"

 ArchivePostingURL "/archiv/t/%t/m/%m/"
 ArchiveURL "/archiv/"

 PostScript "/cgi-bin/fo_post"
 UPostScript "/cgi-bin/user/fo_post"

 UserConfig "/cgi-bin/user/fo_userconf"
 UserRegister "/cgi-bin/fo_usermanagement"
 UserManagement "/cgi-bin/user/fo_usermanagement"

 SharedMemIds "10000" "10001" "10002"

 ExternCharset "UTF-8"

 AuthMode "http"

 DateLocale "de_DE.UTF-8"
 Language "de"
 MessagesDatabase "@localstatedir@/cforum/forum1_messages.db"

 Categories "ASP" "BROWSER" "CGI" "CSS" "DATENBANK" "DESIGN" "DHTML" "E-MAIL" "FTP" "GRAFIK" "HTML" "HTTP" "INTERNET-ANBINDUNG" "JAVA" "JAVASCRIPT" "MEINUNG" "MENSCHELEI" "PERL" "PHP" "PROGRAMMIERTECHNIK" "PROJEKTVERWALTUNG" "PROVIDER" "RECHT" "SERVER" "SOFTWARE" "SONSTIGES" "VB-SCRIPT" "XML" "XML-DERIVAT" "XSL" "ZUR INFO" "ZU DIESEM FORUM"

 ConfigDirectory "@localstatedir@/cforum/forum1/users/"
 InactivityDelete "50"
 SendMailBeforeDelete "yes"
}

# eof

AddModule "Plugins::RegisterName"
AddModule "Plugins::HTTPAuth"
AddModule "Plugins::ImportExport"
AddModule "Plugins::UserconfCategories"

Forum FORUM1 {

  # Edit-Options
  MinLength "QuotingChars" "1"
  MinLength "Name" "2"
  MinLength "EMail" "2"
  MinLength "Bye" "2"
  MinLength "Hi" "2"

  MaxLength "Bye" "120"
  MaxLength "Hi" "120"
  MaxLength "Name" "60"
  MaxLength "EMail" "60"

  MinVal "AutoReload"   "2"
  MaxVal "AutoReload"   "30"

  ModuleConfig "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/modules.%s.xml"

  FromUntilFormat "%d. %m. %Y, %H:%M"

  Edit "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_usersettings.so"
  ImportForm "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_importform.so"
  ImportOk "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_importok.so"
}


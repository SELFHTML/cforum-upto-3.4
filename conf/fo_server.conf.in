ModulePath "@libdir@/cforum/"

Load "flt_tid_index"
Load "flt_cftp"
Load "flt_registerednames"
Load "flt_extern"
Load "flt_voting"
Load "flt_xmlstorage"

Forums "FORUM1"
RunArchiver "1800"

MinThreads "10"
SpareThreads "5"
MaxThreads "120"


# We want logfiles to be 2MB max
LogMaxSize "2097152"
ErrorLog "@localstatedir@/cf_errors"
StdLog "@localstatedir@/cf_stdlog"

PIDFile "@localstatedir@/fo_pid"

# external interface
ExternPort "6666"
# ExternInterface 192.168.50.2

Forums "FORUM1"

Forum FORUM1 {
 MessagePath "@sharedstatedir@/cforum/messages/forum1/"
 ArchivePath "@sharedstatedir@/cforum/archive/forum1/"

 SortThreads "ascending"
 SortMessages "ascending"

 ArchiveOnVote "10" # archive on 10% votings
 MainFileMaxBytes "250000" # archive at 250k bytes
 MainFileMaxPostings "2000"
 MainFileMaxThreads "150"

 AuthNames "@sharedstatedir@/cforum/registered_names_forum1.db"
}




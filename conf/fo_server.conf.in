ModulePath "@CMAKE_INSTALL_LIBDIR_FULL@/cforum/"

Load "flt_tid_index"
Load "flt_cftp"
Load "flt_registerednames"
Load "flt_extern"
Load "flt_voting"
Load "flt_xmlstorage"

Forums "FORUM1"
RunArchiver "1800"

MinThreads "10"
SpareThreads "5"
MaxThreads "120"

UserGroup "ckruse" "users"
Chroot "/home/ckruse/tmp/cforum/chroot/"

# We want logfiles to be 2MB max
LogMaxSize "2097152"
ErrorLog "@CMAKE_INSTALL_LOCALSTATEDIR_FULL@/log/cf_errors"
StdLog "@CMAKE_INSTALL_LOCALSTATEDIR_FULL@/log/cf_stdlog"

PIDFile "@CMAKE_INSTALL_LOCALSTATEDIR_FULL@/run/cf_pid"

# external interface
ExternPort "6666"
# ExternInterface 192.168.50.2

Forum FORUM1 {
 MessagePath "@CMAKE_INSTALL_LOCALSTATEDIR_FULL@/cforum/messages/forum1/"
 ArchivePath "@CMAKE_INSTALL_LOCALSTATEDIR_FULL@/cforum/archive/forum1/"

 SortThreads "ascending"
 SortMessages "ascending"

 ArchiveOnVote "10" # archive on 10% votings
 MainFileMaxBytes "250000" # archive at 250k bytes
 MainFileMaxPostings "2000"
 MainFileMaxThreads "150"

 AuthNames "@CMAKE_INSTALL_LOCALSTATEDIR_FULL@/cforum/registered_names_forum1.db"
}




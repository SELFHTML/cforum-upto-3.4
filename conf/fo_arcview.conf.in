# $LastChangedRevision$
# $LastChangedBy$
#

ModulePath "@libdir@/cforum/"

Load "flt_http"
Load "flt_posting"
Load "flt_httpauth"
Load "flt_admin"
Load "flt_directives"
Load "flt_syntax"
Load "flt_xmlarc"

Forum FORUM1 {
 SortYearList "ascending" # ascending/descending
 SortMonthList "descending" # ascending/descending
 SortThreadList "ascending" # ascending/descending
 SortMessages "ascending" # ascending/descending

 QuotingChars  "»» "

 DateFormatList "%d. %m. %Y"
 DateFormatViewList "%d. %m. %Y, %H:%M"

 EnableCache "yes"
 CacheLevel "6"
 CacheDir "/home/ckruse/dev/c/cforum/cgi-shared/data/cache/"

 TemplatesFrameset "@libdir@/cforum/%s_%s_frameset.so" "@libdir@/cforum/%s_%s_blank.so"

 FatalTemplate "@libdir@/cforum/%s_%s_fatal.so"

 YearsTemplate "@libdir@/cforum/%s_%s_arcyears.so"
 YearListTemplate "@libdir@/cforum/%s_%s_arcyearlist.so"

 MonthsTemplate "@libdir@/cforum/%s_%s_arcmonths.so"
 MonthsListTemplate "@libdir@/cforum/%s_%s_arcmonthlist.so"

 ThreadListMonthTemplate "@libdir@/cforum/%s_%s_arcthreadlist_month.so"

 ThreadTemplate "@libdir@/cforum/%s_%s_arcthread.so"
 ThreadListTemplate "@libdir@/cforum/%s_%s_arcthreadlist.so"
 PerThreadTemplate "@libdir@/cforum/%s_%s_arcperthread.so"

 UpDownTemplate "@libdir@/cforum/%s_%s_updown.so"
}


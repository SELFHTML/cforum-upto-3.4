#
# The configuration for the archive viewer
#
# $LastChangedDate$
# $LastChangedRevision$
# $LastChangedBy$
#

ModulePath "@CMAKE_INSTALL_LIBDIR_FULL@/cforum/"

Load "flt_http"
Load "flt_posting"
Load "flt_httpauth"
Load "flt_admin"
Load "flt_directives"
Load "flt_syntax"
Load "flt_xmlarc"

PatternsDirectory "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/patterns/"

Forum FORUM1 {
  ArchivePath "@CMAKE_INSTALL_LOCALSTATEDIR_FULL@/cforum/archive/forum1/"

 SortYearList "ascending" # ascending/descending
 SortMonthList "descending" # ascending/descending
 SortThreadList "ascending" # ascending/descending
 SortMessages "ascending" # ascending/descending

 QuotingChars  "»» "

 DateFormatList "%d. %m. %Y"
 DateFormatViewList "%d. %m. %Y, %H:%M"

 EnableCache "yes"
 CacheLevel "6"
 CacheDir "@CMAKE_INSTALL_LOCALSTATEDIR_FULL@/cforum/cache/forum1/"

 YearsTemplate "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_arcyears.so"
 MonthsTemplate "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_arcmonths.so"

 ThreadTemplate "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_arcthread.so"
 ThreadListTemplate "@CMAKE_INSTALL_SYSCONFDIR_FULL@/cforum/templates/forum1/%s_%s_arcthreadlist.so"
}


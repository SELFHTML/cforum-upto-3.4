#
# The configuration for the archive viewer
#
# $LastChangedDate$
# $LastChangedRevision$
# $LastChangedBy$
#

ModulePath "@libdir@/cforum/"

Load "flt_http"
Load "flt_posting"
Load "flt_httpauth"
Load "flt_admin"
Load "flt_directives"
Load "flt_syntax"
Load "flt_xmlarc"

PatternsDirectory "@sysconfdir@/cforum/patterns/"

Forum FORUM1 {
  ArchivePath "@localstatedir@/cforum/archive/forum1/"

 SortYearList "ascending" # ascending/descending
 SortMonthList "descending" # ascending/descending
 SortThreadList "ascending" # ascending/descending
 SortMessages "ascending" # ascending/descending

 QuotingChars  "»» "

 DateFormatList "%d. %m. %Y"
 DateFormatViewList "%d. %m. %Y, %H:%M"

 EnableCache "yes"
 CacheLevel "6"
 CacheDir "@localstatedir@/cforum/cache/forum1/"

 TemplatesFrameset "@sysconfdir@/cforum/templates/forum1/%s_%s_frameset.so" "@sysconfdir@/cforum/templates/forum1/%s_%s_blank.so"

 FatalTemplate "@sysconfdir@/cforum/templates/forum1/%s_%s_fatal.so"

 YearsTemplate "@sysconfdir@/cforum/templates/forum1/%s_%s_arcyears.so"
 MonthsTemplate "@sysconfdir@/cforum/templates/forum1/%s_%s_arcmonths.so"

 ThreadTemplate "@sysconfdir@/cforum/templates/forum1/%s_%s_arcthread.so"
 ThreadListTemplate "@sysconfdir@/cforum/templates/forum1/%s_%s_arcthreadlist.so"
}


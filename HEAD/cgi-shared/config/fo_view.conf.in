<Filters>
 AddFilter "@pkglibdir@/flt_tplmode.so" "flt_tplmode"
 AddFilter "@pkglibdir@/flt_http.so" "flt_http"
 AddFilter "@pkglibdir@/flt_frameset.so" "flt_frameset"
 AddFilter "@pkglibdir@/flt_openclose.so" "flt_openclose"
 AddFilter "@pkglibdir@/flt_posting.so" "flt_posting"
 AddFilter "@pkglibdir@/flt_basic.so" "flt_basic"
 AddFilter "@pkglibdir@/flt_listhighlight.so" "flt_listhighlight"
 AddFilter "@pkglibdir@/flt_category.so" "flt_category"
 AddFilter "@pkglibdir@/flt_deleted.so" "flt_deleted"
 AddFilter "@pkglibdir@/flt_visited.so" "flt_visited"
 AddFilter "@pkglibdir@/flt_owncss.so" "flt_owncss"
 AddFilter "@pkglibdir@/flt_livefilter.so" "flt_livefilter"
 AddFilter "@pkglibdir@/flt_httpauth.so" "flt_httpauth"
 AddFilter "@pkglibdir@/flt_admin.so" "flt_admin"
 AddFilter "@pkglibdir@/flt_link.so" "flt_link"
 AddFilter "@pkglibdir@/flt_threadreturnanchor.so" "flt_threadreturnanchor"
</Filters>

<ForumBehavior>
 ThreadsOpenByDefault    "yes"
 DoQuote                 "yes"
 QuotingChars            "»» "
 ShowThread              "partitial" # full, partitial, none
# VIPList                 "Cheatah,Stefan Einspender,Stefan Muenz"
# VIPColors               "#FF00FF" "#0000FF"
 ShowForumAsFrameset     "no"
 ReadMode                "normal" # normal, table
# BaseTarget              "view"

 SendLastModified        "yes"
 SendExpires             "1M"
 HandleLastModifiedSince "yes"

 GeneratePreview "yes"
</ForumBehavior>

<Templates>
 TemplatesFrameset      "@pkglibdir@/%s_frameset.so" "@pkglibdir@/%s_blank.so"

 TemplateForumBegin     "@pkglibdir@/%s_forum_begin.so"
 TemplateForumEnd       "@pkglibdir@/%s_forum_end.so"
 TemplateForumThread    "@pkglibdir@/%s_forum_thread.so"
 TemplatePosting        "@pkglibdir@/%s_forum_posting.so"
</Templates>

<DateConfig>
 # Date format
 #
 # see 'man strftime` for more informations to the
 # format strings
 #

 DateFormatLoadTime     "%A, %d. %B %Y, %H:%M:%S"
 DateFormatThreadList   "%d. %m. %Y, %H:%M"
 DateFormatThreadView   "%d. %B %Y, %H:%M"
</DateConfig>


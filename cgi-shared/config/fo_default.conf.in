 ErrorTemplate "@libdir@/cforum/%s_errortpl.so"
 ErrorMessages "@CONFIGDIR@/errormessages.txt"

 ThreadIndexFile "@DATADIR@/tididx.dat"

 BaseURL "/"
 PostingURL "/t/%t/m/%m/"
 UBaseURL "/my/"
 UPostingURL "/my/t/%t/m/%m/"

 ArchivePostingURL "/archiv/t/%t/m/%m/"

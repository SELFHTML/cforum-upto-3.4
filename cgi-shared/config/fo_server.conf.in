<Filters>
  AddFilter "@libdir@/cforum/flt_tid_index.so" "flt_tid_index"
  AddFilter "@libdir@/cforum/flt_cftp.so" "flt_cftp"
  AddFilter "@libdir@/cforum/flt_registerednames.so" "flt_registerednames"
#  AddFilter "@libdir@/cforum/flt_nntp.so" "flt_nntp"
  AddFilter "@libdir@/cforum/flt_extern.so" "flt_extern"
  AddFilter "@libdir@/cforum/flt_voting.so" "flt_voting"
</Filters>

<General>
 SortThreads "2" # 1 or 2
 SortMessages "2" # 1 or 2

 RunArchiver "1800"

 ErrorLog "@with_log_dir@/fo_errors"
 StdLog "@with_log_dir@/fo_stdlog"

 PIDFile "@with_log_dir@/fo_pid"
</General>

<Archiving>
 ArchiveOnVote "10" # archive on 10% votings
 MainFileMaxBytes "250000" # archive at 250k bytes
 MainFileMaxPostings "2000"
 MainFileMaxThreads "150"
</Archiving>

AuthNames "@with_cgi_shared@/data/registered_names.db"

# external interface
ExternPort "6666"
# ExternInterface 192.168.50.2

#NNTPPort "2048"
#NNTPHost "teamone.de"


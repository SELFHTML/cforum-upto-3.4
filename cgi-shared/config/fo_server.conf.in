ModulePath "@libdir@"

Load "flt_tid_index"
Load "flt_cftp"
Load "flt_registerednames"
#Load "flt_nntp"
Load "flt_extern"
Load "flt_voting"

Forums "FORUM1"
RunArchiver "1800"

MinThreads "10"
SpareThreads "5"
MaxThreads "120"


ErrorLog "@with_log_dir@/fo_errors"
StdLog "@with_log_dir@/fo_stdlog"

PIDFile "@with_log_dir@/fo_pid"

# external interface
ExternPort "6666"
# ExternInterface 192.168.50.2

#NNTPPort "2048"
#NNTPHost "teamone.de"

Forums "FORUM1"

Forum FORUM1 {
 SortThreads "ascending"
 SortMessages "ascending"

 ArchiveOnVote "10" # archive on 10% votings
 MainFileMaxBytes "250000" # archive at 250k bytes
 MainFileMaxPostings "2000"
 MainFileMaxThreads "150"

 AuthNames "@DATADIR@/registered_names.db"
}




<Modules>
  AddModule "Plugins::RegisterName"
  AddModule "Plugins::HTTPAuth"
</Modules>

<Form>
  NecessaryField "EMail"

  MinLength "UserName" "3"
  MinLength "Password" "3"

  # Edit-Options
  MinLength "QuotingChars" "1"
  MinLength "Name" "2"
  MinLength "EMail" "2"
  MinLength "Bye" "2"
  MinLength "Hi" "2"

  MaxLength "Bye" "120"
  MaxLength "Hi" "120"
  MaxLength "Name" "60"
  MaxLength "EMail" "60"

  MinVal "AutoReload"   "2"
  MaxVal "AutoReload"   "30"
</Form>

<General>
  SQLUser "forum"
  SQLPass "9489500"
  SQLDatabase "forum_users"
  SQLHost "localhost"
  SQLPort "3360"
  SQLDriver "Pg"

  ModuleConfig "@with_config_dir@/modules.xml"
</General>

<DateConfig>
  FromUntilFormat "%d. %m. %Y, %H:%M"
</DateConfig>

<Templates>
  Edit "@libdir@/cforum/%s_useredit.so"
  EditEntry "@libdir@/cforum/%s_setting.so"
  SectEntry "@libdir@/cforum/%s_section.so"
  PageEntry "@libdir@/cforum/%s_pageentry.so"
  EditOk "@libdir@/cforum/%s_usereditok.so"
  UpDown "@libdir@/cforum/%s_updown.so"

  ViewSettings "@libdir@/cforum/%s_usersettings.so"

  Register "@libdir@/cforum/%s_userregister.so"
  RegisterOk "@libdir@/cforum/%s_userregok.so"

  ChangePass "@libdir@/cforum/%s_chpass.so"
  ChangePassOk "@libdir@/cforum/%s_chpassok.so"

  Unregister "@libdir@/cforum/%s_unreg.so"
  UnregisterOk "@libdir@/cforum/%s_unregok.so"

  SendPass "@libdir@/cforum/%s_send_pass.so"
  SendPassErr "@libdir@/cforum/%s_send_pass_err.so"
  SendPassOk "@libdir@/cforum/%s_send_pass_ok.so"
</Templates>


#!/usr/bin/perl -w

use strict;

use ExtUtils::MakeMaker;
use Config;

my $PERL = '@PERL@';
my $SWIG = '@SWIG@';

system $SWIG,'-perl5','-shadow','CForum-Template.i';
open DAT,'>>','Template.pm';
print DAT <<PL;

sub new {
  # remove package name
  shift @_;
  return new CForum::Template::t_cf_template(\@_);
}

1;

PL
close DAT;

WriteMakefile(
    NAME              => 'CForum::Template',
    PREREQ_PM         => {},
    AUTHOR            => 'Christian Kruse <ckruse@wwwtech.de>',
    LIBS              => ['-L@libdir@/cforum/ -lcftemplate -lcfhashlib -lcfutils'],
    DEFINE            => '',
    INC               => '-I. -I../../',
    C                 => ['CForum-Template_wrap.c'],
	# Un-comment this if you add C files to link with later:
     OBJECT            => 'CForum-Template_wrap.o',
);

# eof
